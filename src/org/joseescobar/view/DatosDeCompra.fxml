<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0"
           stylesheets="@DatosDeCompra.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.joseescobar.controller.DatosDeCompraController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="anchor-pane">
         <children>
            <Label layoutX="241.0" layoutY="29.0" text="Gracias por su compra" />
            <Label layoutX="24.0" layoutY="46.0" text="No. Referencia" />
            <Label layoutX="210.0" layoutY="46.0" text="Fecha" />

            <TableView fx:id="tblArticulos" layoutX="37.0" layoutY="120.0" prefHeight="200.0" prefWidth="320.0">
              <columns>
                <TableColumn fx:id="clmArticulos" prefWidth="100.0" text="Artículo" />
                <TableColumn fx:id="clmAutor" prefWidth="100.0" text="Autor" />
                <TableColumn fx:id="clmCantidad" prefWidth="60.0" text="Cantidad" />
                <TableColumn fx:id="clmPrecio" prefWidth="60.0" text="Precio" />
                <TableColumn fx:id="clmSubTotal" prefWidth="75.0" text="SubTotal" />
              </columns>
            </TableView>

            <TextField fx:id="txtReferencia" layoutX="24.0" layoutY="63.0" />
            <TextField fx:id="txtFecha" layoutX="210.0" layoutY="63.0" />
            
            <Label layoutX="376.0" layoutY="119.0" text="SubTotal" />
            <Label layoutX="376.0" layoutY="176.0" text="IVA" />
            <Label layoutX="372.0" layoutY="232.0" text="Total" />
            <Label layoutX="378.0" layoutY="286.0" text="Método De Pago" />

            <TextField fx:id="txtSubTotal" layoutX="376.0" layoutY="136.0" />
            <TextField fx:id="txtIVA" layoutX="376.0" layoutY="193.0" />
            <TextField fx:id="txtTotal" layoutX="376.0" layoutY="249.0" />
            <TextField fx:id="txtMetodoDePago" layoutX="376.0" layoutY="307.0" />

            <Button fx:id="btnSalir" layoutX="562.0" layoutY="25.0" mnemonicParsing="false" onAction="#salir" text="X" />
            <Button fx:id="btnCompra" layoutX="220.0" layoutY="350.0" mnemonicParsing="false" onAction="#compra" text="Realizar otra compra" />
         </children>
      </AnchorPane>
   </children>
</StackPane>
